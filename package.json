{
  "name": "camunda-nestjs",
  "version": "0.2.0",
  "description": "Camunda8 integration module for NestJS with automatic worker discovery and workflow management",
  "author": "arian-press2015 <arian.press2015@gmail.com>",
  "license": "MIT",
  "private": false,
  "main": "dist/lib/camunda/index.js",
  "types": "dist/lib/camunda/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/lib/camunda/index.js",
      "require": "./dist/lib/camunda/index.js",
      "types": "./dist/lib/camunda/index.d.ts"
    }
  },
  "files": [
    "dist/lib/camunda",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "camunda",
    "camunda8",
    "nestjs",
    "workflow",
    "bpmn",
    "zeebe",
    "orchestration",
    "worker",
    "process-engine"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/arian-press2015/camunda-nestjs.git"
  },
  "bugs": {
    "url": "https://github.com/arian-press2015/camunda-nestjs/issues"
  },
  "homepage": "https://github.com/arian-press2015/camunda-nestjs#readme",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:lib": "tsc -p tsconfig.build.json",
    "prepublishOnly": "npm run build",
    "format": "prettier --write \"lib/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{lib,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "peerDependencies": {
    "@nestjs/common": "^10.0.0 || ^11.0.0",
    "@nestjs/core": "^10.0.0 || ^11.0.0",
    "class-transformer": "^0.5.0",
    "class-validator": "^0.14.0",
    "reflect-metadata": "^0.1.13 || ^0.2.0",
    "rxjs": "^7.2.0"
  },
  "dependencies": {
    "@camunda8/sdk": "^8.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "lib",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
